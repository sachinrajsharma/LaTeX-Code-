	\newpage
	\section*{Answer Key}
	
	\begin{itemize}
		\item \textbf{Section A:}
		\begin{multicols}{2}
			\begin{enumerate}[label=Q\arabic*.]
				\item (b)
				\item (c)
				\item (a)
				\item (a)
				\item (b)
				\item (b)
				\item (a)
			\end{enumerate}
		\end{multicols}
		
		\item \textbf{Section B:}
		\begin{enumerate}[label=Q\arabic*.]
			\setcounter{enumi}{7}
			\item Sample answers: (0,6), (2,3), (4,0), (-2,9)
			\item Points: (0,4), (4,0). Straight line between them.
			\item \( 15x + 25y = 200 \)
			\item No. \( 2(1) + 3(2) = 2 + 6 = 8 \Rightarrow \text{Yes} \)
		\end{enumerate}
		
		\item \textbf{Section C:}
		\begin{enumerate}[label=Q\arabic*.]
			\setcounter{enumi}{11}
			\item (90,80), (100,70), (80,90). Graph: straight line through (80,90).
			\item Intercepts: x = 2, y = -3. Graph: line through (2,0) and (0,-3)
			\item Equation: \( y = 20x + 500 \). Graph for x = 0 to 5.
			\item Both have same slope = 2. Parallel lines with different intercepts.
		\end{enumerate}
		
		\item \textbf{Section D:}
		\begin{enumerate}[label=Q\arabic*.]
			\setcounter{enumi}{15}
			\item (a)
			\item (3)
			\item See graph
			\item Yes
			\item (b)
		\end{enumerate}
	\end{itemize}
	
